<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="NoActionBar.AppBarOverlay.Dark" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:background">@color/main_background_dark</item>
    </style>

    <style name="NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="NoActionBar.PopupOverlay.Dark" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="OverFlow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
        <item name="android:colorBackground">@color/card_background</item>
    </style>

    <style name="OverFlow.Dark" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow_dark</item>
        <item name="android:colorBackground">@color/card_background_dark</item>
    </style>

    <!-- Resize the action bar activity indicator to match the other action items -->
    <style name="IndeterminateProgress" parent="Widget.AppCompat.ProgressBar">
        <item name="android:minWidth">32dp</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:width">48dp</item>
        <item name="android:height">48dp</item>
    </style>

    <style name="CardText">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="CardText.Light">
        <item name="android:textColor">@color/card_text</item>
    </style>

    <style name="CardText.Dark">
        <item name="android:textColor">@color/card_text_dark</item>
    </style>

    <style name="CardText.Committer">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardText.CommitOwnerText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/prop_label_padding_left</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardText.CommitOwnerDetails">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/standard_padding</item>
        <item name="android:paddingRight">@dimen/standard_padding</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingBottom">5dip</item>
    </style>

    <style name="CardTitle" parent="style/CardText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_larger</item>
        <item name="android:textStyle">italic</item>
        <item name="android:paddingLeft">@dimen/standard_padding</item>
        <item name="android:paddingRight">@dimen/standard_padding</item>
    </style>

    <style name="CardTitle.Light" parent="style/CardTitle">
        <item name="android:textColor">@color/card_title_text</item>
    </style>

    <style name="CardTitle.Dark" parent="style/CardTitle">
        <item name="android:textColor">@color/card_light_text</item>
    </style>

    <style name="ActionViewsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
    </style>

    <style name="GerritUrl">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@color/card_text</item>
        <item name="android:textSize">@dimen/text_size_extra_micro</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="Diff">
        <item name="added">@color/text_green</item>
        <item name="pathInfo">@color/text_orange</item>
    </style>
    <style name="Diff.Light">
        <item name="removed">@color/text_red</item>
        <item name="rangeInfo">@color/text_purple</item>
        <item name="origHeader">@color/text_brown</item>
        <item name="newHeader">@color/text_blue</item>
    </style>
    <style name="Diff.Dark">
        <item name="removed">@color/text_light_red</item>
        <item name="rangeInfo">@color/text_purple_light</item>
        <item name="origHeader">@color/text_brown_light</item>
        <item name="newHeader">@color/text_blue_light</item>
    </style>

    <style name="Help"/>
    <style name="Help.Label">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>
    <style name="Help.Text">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingTop">2dip</item>
    </style>

    <!-- Styles for changed files cards -->
    <style name="CardText.Inserted">
        <item name="android:gravity">right</item>
        <item name="android:paddingLeft">@dimen/standard_padding</item>
        <item name="android:paddingRight">@dimen/standard_padding</item>
    </style>
    <style name="CardText.Inserted.Light">
        <item name="android:textColor">@color/text_green</item>
    </style>
    <style name="CardText.Inserted.Dark">
        <item name="android:textColor">@color/text_green_light</item>
    </style>
    <style name="CardText.Deleted">
        <item name="android:gravity">right</item>
        <item name="android:paddingLeft">@dimen/standard_padding</item>
        <item name="android:paddingRight">@dimen/standard_padding</item>
    </style>
    <style name="CardText.Deleted.Light">
        <item name="android:textColor">@color/text_red</item>
    </style>
    <style name="CardText.Deleted.Dark">
        <item name="android:textColor">@color/text_red_light</item>
    </style>

    <style name="SignInButton">
        <item name="pb_colorComplete">@color/signin_complete</item>
        <item name="pb_colorNormal">@android:color/black</item>
        <item name="pb_colorPressed">@android:color/black</item>
        <item name="pb_colorError">@color/signin_error</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:layout_marginTop">@dimen/standard_padding</item>
        <item name="android:layout_marginBottom">@dimen/standard_padding</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="SignInButton.Light">
        <item name="pb_colorComplete">@color/signin_complete_light</item>
        <item name="pb_colorNormal">@android:color/white</item>
        <item name="pb_colorPressed">@android:color/white</item>
        <item name="pb_colorError">@color/signin_error_light</item>
        <item name="android:background">@android:color/white</item>
    </style>
    <style name="SigninFailure" parent="CardText.Deleted.Dark" />
    <style name="SigninFailure.Light" parent="CardText.Deleted.Light" />

    <style name="BorderlessBackground" parent="Widget.AppCompat.Button.Borderless"/>
    <style name="BorderlessBackground.Dark" parent="Widget.AppCompat.Button.Borderless"/>

</resources>