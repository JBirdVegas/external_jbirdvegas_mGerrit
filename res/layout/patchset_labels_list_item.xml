<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/reviewer_padding_left_indent"
    android:paddingTop="@dimen/reviewer_padding_top"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="left">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labels_card_approval"
        android:singleLine="true"
        android:textAppearance="@style/CardText"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="3dip"
        android:paddingRight="3dip"
        android:text="@string/dash"
        android:textAppearance="@style/CardText"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labels_card_reviewer_name"
        android:singleLine="true"
        android:textAppearance="@style/CardText"/>
</LinearLayout>