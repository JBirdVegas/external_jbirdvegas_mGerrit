<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ActionBar" parent="android:Widget.Material.ActionBar">
        <item name="android:indeterminateProgressStyle">@style/IndeterminateProgress</item>
    </style>

    <style name="IndeterminateProgress" parent="@android:style/Widget.Material.ProgressBar.Small">
        <item name="android:minWidth">32dp</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:width">48dp</item>
        <item name="android:height">48dp</item>
    </style>

    <style name="OverFlow" parent="@android:style/Widget.Material.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>

    <style name="OverFlow.Dark" parent="@android:style/Widget.Material.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow_dark</item>
    </style>

    <!-- Overwriting this for Lollipop to show the ripple effect -->
    <style name="BorderlessBackground">
        <item name="android:background">@drawable/ripple_light</item>
    </style>
    <style name="BorderlessBackground.Dark">
        <item name="android:background">@drawable/ripple_dark</item>
    </style>

</resources>